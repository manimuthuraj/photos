<%- include ("../partials/header") %>
    <div class="container">
        <div class="row">
            <h1 style="text-align: center;">Edit a New Photo</h1>
            <div style="width: 30%; margin: 25px auto;">
                <form action="/photo/<%=photos._id%>?_method=PUT" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" value="<%=photos.title%>" name="name">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" value="<%=photos.image%>" name="image">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" value="<%=photos.description%>" name="description">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-md btn-primary btn-block">submit</button>
                    </div>
                </form>
                <a class="btn " href="/">Go Back</a>
            </div>
        </div>
    </div>
    <%- include ("../partials/footer") %>