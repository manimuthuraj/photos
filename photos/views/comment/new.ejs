<%- include ("../partials/header") %>
    <div class="container">
        <div class="row">
            <h1 style="text-align: center;">Add new comment to
                <%= photo.title %>
            </h1>
            <div style="width: 30%; margin: 25px auto;">
                <form action="/photo/<%= photo._id %>/comments" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" placeholder="comment" name="text">
                    </div>

                    <div class="form-group">
                        <button class="btn btn-md btn-primary btn-block">submit</button>
                    </div>
                </form>
                <a class="btn " href="/">Go Back</a>
            </div>
        </div>
    </div>
    <%- include ("../partials/footer") %>